<?xml version="1.0" encoding="utf-8"?>
<BiReportDefinition xmlns="http://santedb.org/bi" id="org.santedb.emr.bi.reports.patient.registrationsByGender" label="Registrations by Gender" name="Registrations by Gender" status="active">
    
    <meta>
        <authors>
            <add>SanteSuite Contributors</add>
        </authors>
        <annotation>
            <div xmlns="http://www.w3.org/1999/xhtml">
                <p>Displays the distribution of genders across registered patients, and registrations by age.</p>
            </div>
        </annotation>
        <public>true</public>
    </meta>

    <dataSources>
         <view ref="#org.santedb.emr.bi.view.patient.registrationsByGender" name="patient" />
    </dataSources>

    <views>
        <add id="org.santedb.emr.bi.reports.patient.registrationsByGender.chart1" label="ui.bi.report.registrationsByGender.regByGender" name="chart1">
            <div xmlns="http://www.w3.org/1999/xhtml" xmlns:bi="http://santedb.org/bi/view">
                <bi:chart type="bar" legend="true" source="patient">
                    <bi:title>Patient Registrations by Gender</bi:title>
                    <bi:labels type="string" label="Gender" >gndr</bi:labels>
                    <bi:yAxis min="0" label="Registrations" />
                    <bi:dataset label="Registrations" backgroundColor="rgba(0,200,255,0.5)" borderColor="transparent" pointRadius="0">n_registrations</bi:dataset>
                </bi:chart>
            </div>
        </add>
        <add id="org.santedb.emr.bi.reports.patient.registrationsByGender.chart2" label="ui.bi.report.registrationsByGender.regByAge" name="chart2">
            <div xmlns="http://www.w3.org/1999/xhtml" xmlns:bi="http://santedb.org/bi/view">
                <bi:chart type="bar" legend="true" source="patient">
                    <bi:title>Patient Registrations by Ages (in years)</bi:title>
                    <bi:labels type="string" label="Age" format="#0">age/365.25</bi:labels>
                    <bi:yAxis min="0" label="Registrations" />
                    <bi:dataset label="Registrations" backgroundColor="rgba(0,200,255,0.5)" borderColor="transparent" pointRadius="0">n_registrations</bi:dataset>
                </bi:chart>
            </div>
        </add>
    </views>
</BiReportDefinition>